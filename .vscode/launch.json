    "version": "0.2.0",
    "configurations": [
      {
        "name": "Current TS file",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
        "runtimeArgs": ["--project", "tsconfig.json"],
        "args": ["${relativeFile}"],
        "cwd": "${workspaceRoot}",
        "internalConsoleOptions": "openOnSessionStart",
        "skipFiles": ["<node_internals>/**", "node_modules/**"],
        // "protocol": "inspector",
        // "sourceMaps": true
      },
    ]
  }